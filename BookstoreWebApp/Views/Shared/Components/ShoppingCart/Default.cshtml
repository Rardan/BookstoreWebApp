@model BookstoreWebApp.Models.ShoppingCart
@{
    var items = Model.GetShoppingCartItems();
}
<link rel="stylesheet" href="~/css/shoppingcart.css" />
<a href="#" class="dropdown-toggle cart-dropbox-button" data-toggle="dropdown" role="button" aria-expanded="false">

</a>


<div class="shopping-cart dropdown-menu">
    <div class="shopping-cart-header">
        <i class="fa fa-shopping-cart cart-icon"></i><span class="badge">@Model.GetShoppingCartItems().Count()</span>
        <div class="shopping-cart-total">
            <span class="lighter-text">Total:</span>
            <span class="main-color-text">@Model.GetShoppingCartTotal() zł</span>
        </div>
    </div>

    <ul class="shopping-cart-items" role="menu" aria-labelledby="dropdownMenu" style="height: 200px; overflow: auto">
        @if (Model.GetShoppingCartItems().Count() == 0)
        {
            <li class="clearfix">No items in your cart</li>
        }
        else
        {
            @foreach (var item in items)
            {
                <li class="clearfix">
                    <img src="@item.Book.Photo" alt="" />
                    <span class="item-name">@item.Book.Title</span>
                    <span class="item-price">@item.Book.Price zł </span>
                    <span class="item-quantity">Quantity: @item.Amount</span>
                </li>

            }

        }

    </ul>
    <a asp-controller="ShoppingCart" asp-action="Index" class="button btn-light">Your cart</a>
    <a asp-controller="ShoppingCart" asp-action="Checkout" class="button">Checkout</a>
</div>    
@*</div> end shopping-cart*@ 


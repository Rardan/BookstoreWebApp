@model BookstoreWebApp.ViewModels.ReviewsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reviews";
    var rate = 0;
    var book = Model.Book;
    var selectedvalue = 0;
}
<link rel="stylesheet" href="~/css/site.css" />
<link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600,700,800,900" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/styles.css">


    <div class="container">
        <form action="AddReview">
            <div class="row">
                <div class="col-md-3">

                    <span>Your rating: </span>
                    <span>
                        <select class="form-control" name="Rate" id="Rate">
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </span>

                </div>
                <div class="col-md-9">
                    <textarea style="width: 100%; height: 100%; resize:none;" name="description" id="Description">
    
                    </textarea>
                    
                </div>
                <div class="row mt-2 justify-content-center">

                        <button class="btn" style="float:right;" asp-action="AddReview" asp-route-id="@Model.Book.Id" asp-route-Rate="@selectedvalue">Add your review</button>

                </div>
            </div>
        </form>
    </div>
    <div class="container" style="display:block; padding:50px;">
        <hr />
        <h3>Reviews section for @Model.Book.Title</h3>
        @if (Model.Reviews.Count != 0)
        {
            foreach (var review in Model.Reviews)
            {
                <div class="row">
                    <div class="col-md-3">
                        <span><img src="~/img/star24.png" />@review.Rate </span>
                    </div>
                    <div class="col-md-9">
                        @review.Description
                    </div>
                </div>
            }
        }
        
    </div>
 
<script src="js/jquery-2.1.1.js"></script>
<script src="js/jquery.mixitup.min.js"></script>
<script src="js/main.js"></script> <!-- Resource jQuery -->
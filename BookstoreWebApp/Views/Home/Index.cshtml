@model IEnumerable<BookstoreWebApp.Models.Book>
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600,700,800,900" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/css/owl.carousel.min.css">
<link rel="stylesheet" href="~/css/styles.css">
<div class="text-center">
    <section class="slider">
        <div class="slide">
            <img src="~/img/slide1.jpg" alt="slide1">
            <div class="content">
                <div class="title">
                    <h3>Welcome to the bookstore</h3>
                    <h5>Explore book world with us</h5>
                    <a asp-controller="Books" asp-action="Index" class="btn">Start shopping now!</a>
                </div>
            </div>
        </div>
    </section>
    <section class="recomended-sec">
        <div>
            <div class="title">
                <h2>Highly recommendes books</h2>
                <hr>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {

                    <div class="col-lg-3 col-md-6">
                        <div class="item">
                            <img src="@item.Photo" alt="img">
                            <h3>@item.Title</h3>
                            <h6><span class="price">@item.Price</span> / <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@item.Id">Add to cart</a></h6>
                            <div class="hover">
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">
                                    <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section>
</div>
<footer>
    <div class="container">
        <div class="row">

        </div>
    </div>
</footer>
<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/owl.carousel.min.js"></script>
<script src="js/custom.js"></script>
